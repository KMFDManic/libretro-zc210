				 $(CORE_DIR)/alport/midi.cpp \
				 $(CORE_DIR)/alport/packfile.cpp \
				 $(CORE_DIR)/alport/palette.cpp \
				 $(CORE_DIR)/alport/primitive.cpp \
				 $(CORE_DIR)/alport/sound.cpp

